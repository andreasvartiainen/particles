{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wextra",
                "-Wall",
                "-Wundef",
                "-Wpointer-arith",
                "-Wcast-align",
                "-Wstrict-prototypes",
                "-Wstrict-overflow=5",
                "-Wwrite-strings",
                "-Waggregate-return",
                "-Wcast-qual",
                "-Wswitch-default",
                "-Wswitch-enum",
                "-Wconversion",
                "-Wunreachable-code",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lraylib",
                "-lgdi32",
                "-lwinmm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}